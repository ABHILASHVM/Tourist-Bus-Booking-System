<!DOCTYPE html>
<html>

<head>
  <title>My Account</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body{
        background: rgb(36,198,224);
        background: linear-gradient(90deg, rgba(36,198,224,1) 2%, rgba(29,130,215,1) 36%, rgba(64,56,180,1) 84%, rgba(136,0,255,1) 100%);
      
    }
    .go-btn{
        background-color: #e52d2d; 
        border-radius: 5px; 
        border: none;
        padding: 9px 10px; 
        font-size: 14px; 
        cursor: pointer; 
 }
 .go-btn:hover{
        color:rgb(7, 49, 108);
        box-shadow:3px 3px 0px black;
        transition: 0.7;
 }
 .backk{
    text-align: right;
    margin-top: -3.3%;
    margin-right:1.5%;
  }
  </style>
</head>

<body>
  <div class="container mt-4">
    <h2>My Account</h2>
    <div class="backk">
        <a href="http://localhost:3000/account/<%= details.phone%>">
            <button class="go-btn">Back</button>
        </a>
        <a href="/">
          <button class="go-btn">log out</button>
      </a>
    </div>
    
  
    <% if(details!=null) { %>
     
    <form id="accountForm" action="/mypage/<%= details.phone %>?_method=put" method="post">
      <input type="hidden" name="_method" value="PUT" >
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" name="name" id="username" value="<%= details.name %>" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" id="email" value="<%= details.email %>" readonly>
      </div>
      <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" class="form-control" name="phone" id="phone" value="<%= details.phone %>" required>
      </div>
      <button type="submit" class="go-btn">Save Changes</button>
    
    </form>
    <% } %>
  </div>

  <div class="container mt-4">
    <h2>Package Booking Details</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Booking ID</th>
          <th>Package Name</th>
          <th>Amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="bookingDetails">
        <!-- Dynamically populate this section using JavaScript -->
        <% if(package!=null) { %>
          <% package.forEach(function(item){ %>
          <tr>
             
              <td><%= item._id %></td>
              <td><%= item.packname %></td>
              <td><%= item.amount %></td>
              <td> <a href="/contact_us/<%= details.phone %>"><button type="button" class="go-btn btn-danger">Cancel Ticket</button></a></td>
          
          </tr>
          <% }) %>
          <% } %>
      </tbody>
    </table>
  </div>

  <div class="container mt-4">
    <h2>Bus Booking Details</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Booking ID</th>
          <th>destination</th>
          <th>Date</th>
          <th>days</th>
          <th>requirements</th>
          <th>amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="bookingDetails">
        <!-- Dynamically populate this section using JavaScript -->
        <% if(bus!=null) { %>
          <% bus.forEach(function(item){ %>
          <tr>
             
              <td><%= item._id %></td>
              <td><%= item.destinations %></td>
              <td><%= item.date %></td>
              <td><%= item.days %></td>
              <td><%= item.requirements %></td>
              <td><%= item.amount %></td>
              <td> <a href="/contact_us/<%= details.phone %>"><button type="button" class="go-btn btn-danger">Cancel Ticket</button></a></td>
          </tr>
          <% }) %>
          <% } %>
      </tbody>
    </table>
  </div>

  
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>

</html>
